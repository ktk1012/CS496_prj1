<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.q.cs496_prj1.MainActivity$PlaceholderFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/todo_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="vertical"/>

    <Switch
        android:id="@+id/todo_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_alignTop="@+id/todo_view"
        android:layout_alignEnd="@+id/todo_fab" />

    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/todo_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        app:backgroundTint="@color/color_fab"
        android:src="@android:drawable/ic_input_add"
        android:layout_marginLeft="@dimen/fab_margin_horizontal"
        android:layout_marginRight="@dimen/fab_margin_horizontal"
        android:layout_marginBottom="@dimen/fab_margin_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/todo_view"/>

</RelativeLayout>